<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tetelvizz.View.HomeScreen.Components.EvaluareBacButton">
    <Grid ColumnSpacing="10" RowSpacing="0" Padding="10" ColumnDefinitions="*,*">
        <Frame x:Name="EvaluareButton"
               Grid.Column="0"
               BackgroundColor="{Binding EvaluareBackgroundColor, Source={x:Reference thisControl}}"
               CornerRadius="10"
               Padding="10">
            <Label Text="Evaluare Națională"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <Frame x:Name="BacButton"
               Grid.Column="1"
               BackgroundColor="{Binding BacBackgroundColor, Source={x:Reference thisControl}}"
               CornerRadius="10"
               Padding="10">
            <Label Text="Bacalaureat"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>
    </Grid>
</ContentView>
