<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tetelvizz.View.HomeScreen.Components.EvaluareBacButton">
    <Grid Padding="24,16"
          BackgroundColor="Transparent"
          HorizontalOptions="Center">
        <Frame BackgroundColor="#F0F0F5"
               CornerRadius="12"
               HasShadow="False"
               Padding="16,12"
               HeightRequest="60"
               HorizontalOptions="FillAndExpand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="Érettségi feladatok"
                       FontSize="18"
                       VerticalOptions="Center"
                       TextColor="#1E1E1E"
                       FontAttributes="Bold" />

                <Frame Grid.Column="1"
                       WidthRequest="36"
                       HeightRequest="36"
                       CornerRadius="18"
                       BackgroundColor="#C1C1CD"
                       HasShadow="False"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Padding="0">
                    <Image Source="arrow_forward_ios.png"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>
    </Grid>
</ContentView>
