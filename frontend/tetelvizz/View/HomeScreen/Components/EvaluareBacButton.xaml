<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tetelvizz.View.HomeScreen.Components.EvaluareBacButton">
    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
        <Border
            x:Name="EvaluareButton"
            StrokeThickness="0"
            BackgroundColor="{Binding LIGHT_GREY_COLOR}"
            Padding="12,6"
            StrokeShape="RoundRectangle 20">
            <Label Text="Képességvizsga" TextColor="White" FontAttributes="Bold"/>
        </Border>

        <Border
            x:Name="BacButton"
            StrokeThickness="0"
            BackgroundColor="{Binding BACKGROUND_COLOR}"
            Padding="12,6"
            StrokeShape="RoundRectangle 20">
            <Label Text="Érettségi" TextColor="White" FontAttributes="Bold"/>
        </Border>
    </HorizontalStackLayout>
</ContentView>
