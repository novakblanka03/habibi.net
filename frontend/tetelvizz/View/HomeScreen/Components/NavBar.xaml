          HeightRequest="70"
          Padding="12,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Home Icon -->
        <StackLayout Grid.Column="0"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Image Source="home.png"
                   WidthRequest="24"
                   HeightRequest="24"
                   HorizontalOptions="Center" />
            <Label Text="KezdÅ‘lap"
                   FontSize="10"
                   TextColor="White"
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Favorite Icon -->
        <StackLayout Grid.Column="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Image Source="favorite.png"
                   WidthRequest="24"
                   HeightRequest="24"
                   HorizontalOptions="Center" />
            <Label Text="Kedvencek"
                   FontSize="10"
                   TextColor="#A1A1AA"
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Profile Icon -->
        <StackLayout Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Image Source="profile.png"
                   WidthRequest="24"
                   HeightRequest="24"
                   HorizontalOptions="Center" />
            <Label Text="Profil"
                   FontSize="10"
                   TextColor="#A1A1AA"
                   HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentView>
