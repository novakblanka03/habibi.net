<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tetelvizz.View.HomeScreen.Components.SubjectCard">
    <Frame CornerRadius="20"
           Padding="16"
           BackgroundColor="#1E1E24"
           Margin="8"
           HasShadow="False"
           HeightRequest="140">
        <Grid RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label x:Name="TitleLabel"
                   FontSize="20"
                   TextColor="White"
                   FontAttributes="Bold" />

            <!-- Subtitle -->
            <Label x:Name="SubtitleLabel"
                   Grid.Row="1"
                   FontSize="14"
                   TextColor="#A1A1AA"
                   VerticalOptions="Center" />

            <!-- Exam Type -->
            <Frame Grid.Row="2"
                   Padding="6,2"
                   CornerRadius="10"
                   BackgroundColor="#3F3F46"
                   HorizontalOptions="Start"
                   HasShadow="False">
                <Label x:Name="ExamTypeLabel"
                       FontSize="12"
                       TextColor="White" />
            </Frame>
        </Grid>
    </Frame>
</ContentView>
