<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tetelvizz.View.HomeScreen.Components.SubjectCard">
    <Frame BackgroundColor="#121212" CornerRadius="12" Padding="12" Margin="0,0,0,12" HasShadow="True">
    <StackLayout>
        <Image x:Name="SubjectImage" HeightRequest="120" Aspect="AspectFill"/>
        <Label x:Name="SubjectLabel" TextColor="#8AD195" FontAttributes="Bold" FontSize="15" Margin="0,8,0,0"/>
        <StackLayout Orientation="Horizontal" Spacing="4" VerticalOptions="Center">
            <Image Source="clock_icon.png" HeightRequest="16" WidthRequest="16"/>
            <Label x:Name="DurationLabel" TextColor="White" VerticalOptions="Center"/>
        </StackLayout>
    </StackLayout>
    </Frame>

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
    </ContentView.GestureRecognizers>

</ContentView>